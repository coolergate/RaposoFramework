{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"jsx": true,
		"useJSXTextNode": true,
		"ecmaVersion": 2018,
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"ignorePatterns": [
		"/out"
	],
	"plugins": [
		"@typescript-eslint",
		"roblox-ts"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:roblox-ts/recommended"
	],
	"rules": {
		"roblox-ts/lua-truthiness": "off",
		"@typescript-eslint/no-require-imports": "off",
		"brace-style": [
			"error"
		],
		"indent": [
			"warn",
			"tab"
		],
		"semi": [
			"error",
			"always"
		]
	}
}